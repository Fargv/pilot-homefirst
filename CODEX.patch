+          <Route path="/bootstrap" element={<BootstrapPage />} />
+          <Route path="/login" element={<LoginPage />} />
+          <Route path="/kitchen/login" element={<LoginPage />} />
+          <Route
+            path="/kitchen/semana"
+            element={(
+              <RequireAuth>
+                <WeekPage />
+              </RequireAuth>
+            )}
