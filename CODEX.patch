+              <RequireAuth>
+                <KitchenLayout>
+                  <div className="kitchen-card">Selecciona una sección.</div>
+                </KitchenLayout>
+              </RequireAuth>
+            )}
+          />
+        </Routes>
+      </AuthProvider>
+    </BrowserRouter>
+  );
+}
