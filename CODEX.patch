+            element={(
+              <RequireAuth>
+                <SwapsPage />
+              </RequireAuth>
+            )}
+          />
+          <Route
+            path="/kitchen/configuracion"
+            element={(
+              <RequireAuth>
+                <SettingsPage />
+              </RequireAuth>
+            )}
+          />
+          <Route
+            path="/admin/usuarios"
+            element={(
+              <RequireAuth roles={["admin"]}>
+                <AdminUsersPage />
+              </RequireAuth>
